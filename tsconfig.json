{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "target": "es2016",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": false, //严格模式
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "jsx": "preserve",
        "lib": ["ESNext", "DOM"],
        "baseUrl": ".",
        "paths": {
            "@vue/*": ["packages/*/src"]
        }
    }
}
